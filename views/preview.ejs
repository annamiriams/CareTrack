<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <title>Referral Form Preview</title>
</head>

<body>
    <%- include('partials/_navbar.ejs') %>

        <div class="preview-banner">
            <p><strong>You are viewing a read-only preview of the referral form. Sign in to create a referral.</strong>
            </p>
        </div>

        <div class="referral-form">

            <fieldset class="form-card">
                <legend><i class="fa fa-user"></i> Client Information</legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text">
                    </div>

                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text">
                    </div>

                    <div class="form-group">
                        <label>Birthday</label>
                        <input type="date">
                    </div>

                    <div class="form-group">
                        <label>School</label>
                        <input type="text">
                    </div>

                    <div class="form-group">
                        <label>Current Grade</label>
                        <input type="text" maxlength="2">
                    </div>

                    <div class="form-group full-width">
                        <label>Address</label>
                        <input type="text">
                    </div>
                </div>
            </fieldset>

            <fieldset class="form-card">
                <legend><i class="fa fa-users"></i> Caregiver Information</legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text">
                    </div>

                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text">
                    </div>

                    <div class="form-group">
                        <label>Relationship</label>
                        <select>
                            <% caregiverRelationshipEnum.forEach(function(option) { %>
                                <option value="<%= option %>">
                                    <%= option %>
                                </option>
                                <% }) %>
                        </select>
                    </div>

                    <div class="form-group full-width">
                        <label>Legal Guardian</label>
                        <div class="radio-group">
                            <input type="radio">
                            <label>Yes</label>

                            <input type="radio">
                            <label>No</label>

                            <input type="radio" checked>
                            <label>Unknown</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text">
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="text">
                    </div>
                </div>
            </fieldset>

            <fieldset class="form-card">
                <legend><i class="fas fa-stethoscope"></i> Provider Information</legend>

                <div class="form-grid">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text">
                    </div>

                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text">
                    </div>

                    <div class="form-group">
                        <label>Relationship</label>
                        <select>
                            <% providerRelationshipEnum.forEach(function(option) { %>
                                <option value="<%= option %>">
                                    <%= option %>
                                </option>
                                <% }) %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text">
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="text">
                    </div>
                </div>
            </fieldset>

            <fieldset class="form-card">
                <legend><i class="fa-solid fa-file"></i> Notes</legend>
                <div class="form-group full-width">
                    <label></label>
                    <textarea rows="4" cols="50"></textarea>
                </div>
            </fieldset>

        </div>

</body>

<footer>

</footer>

</html>