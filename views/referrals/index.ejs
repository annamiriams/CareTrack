<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <title>My Referrals</title>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>

        <fieldset class="search-card">
            <legend><i class="fa-solid fa-magnifying-glass"></i> Search Referrals</legend>
            <div class="search-bar">
                <form class="search" action="/users/:userId/referrals/search" method="GET">
                    <input class="bar" type="text" placeholder="First name" name="firstName">
                    <input class="bar" type="text" placeholder="Last name" name="lastName">
                    <input class="bar" type="date" placeholder="DOB" name="dob">
                    <button class="button-secondary"><i>Search</i></button>
                </form>
            </div>
        </fieldset>

        <!-- Active Referrals -->
        <fieldset class="form-card">
            <legend><i class="fa-solid fa-user-clock"></i> Active Referrals</legend>

            <% const activeReferrals=referrals.filter(r=> !r.intakeCompleted); %>
                <% if (activeReferrals.length===0) { %>
                    <p>No active referrals.</p>
                    <% } else { %>
                        <div class="results-header">
                            <span>First Name</span>
                            <span>Last Name</span>
                            <span>Date of Birth</span>
                        </div>

                        <% activeReferrals.forEach(referral=> { %>
                            <a class="results-row link-row" href="/users/<%= user._id %>/referrals/<%= referral._id %>">
                                <span>
                                    <%= referral.name.firstName %>
                                </span>
                                <span>
                                    <%= referral.name.lastName %>
                                </span>
                                <span>
                                    <%= referral.birthday.toISOString().split('T')[0] %>
                                </span>
                            </a>
                            <% }) %>
                                <% } %>
        </fieldset>

        <!-- Closed Referrals -->
        <fieldset class="form-card">
            <legend><i class="fa-solid fa-user-check"></i> Closed Referrals</legend>

            <% const closedReferrals=referrals.filter(r=> r.intakeCompleted); %>
                <% if (closedReferrals.length===0) { %>
                    <p>No closed referrals.</p>
                    <% } else { %>
                        <div class="results-header">
                            <span>First Name</span>
                            <span>Last Name</span>
                            <span>Date of Birth</span>
                        </div>

                        <% closedReferrals.forEach(referral=> { %>
                            <a class="results-row link-row" href="/users/<%= user._id %>/referrals/<%= referral._id %>">
                                <span>
                                    <%= referral.name.firstName %>
                                </span>
                                <span>
                                    <%= referral.name.lastName %>
                                </span>
                                <span>
                                    <%= referral.birthday.toISOString().split('T')[0] %>
                                </span>
                            </a>
                            <% }) %>
                                <% } %>
        </fieldset>

        <div class="form-button-container">
            <a href="/">
                <button class="button-secondary">Back Home</button>
            </a>
        </div>

</body>

<footer>
</footer>

</html>