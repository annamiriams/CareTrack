<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>All Referrals</title>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>
        <div class="title">
            <img src="/images/golden-pothos.png" alt="">
            <h1>All Referrals</h1>
        </div>

        <div id="referrals">
            <h3>All Referrals:</h3>
            <ul>
                <% users.forEach((user)=> { %>
                        <li>
                            <a href="/users/<%= user._id %>"><%= user.username %></a>
                        </li>
                <% }); %>
            </ul>
        </div>

</body>

